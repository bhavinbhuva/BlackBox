<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="35dp"
            android:src="@drawable/black_box" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/login_here" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/calibri_bold"
            android:text="Mobile No"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/ic_tb_box"
            android:fontFamily="@font/calibri_regular"
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="8dp"
            android:textColor="@color/White" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/calibri_bold"
            android:text="Password"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/White">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtlogin_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_tb_box"
                android:layout_marginRight="35dp"
                android:fontFamily="@font/calibri_regular"
                android:layout_marginLeft="35dp"
                android:textColor="@color/White"
                android:paddingLeft="8dp"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/ic_sign_in"
            android:fontFamily="@font/calibri_bold"
            android:text="SIGN IN"
            android:textColor="@color/White"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/ic_sign_up"
            android:fontFamily="@font/calibri_bold"
            android:text="SIGN UP"
            android:textColor="@color/White"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>